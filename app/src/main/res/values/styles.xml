<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="QuestionTextField" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#576574</item>
        <item name="colorControlActivated">#ee5253</item>
    </style>

    <style name="QuestionTextFieldLayout" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#ee5253</item>
    </style>

</resources>
